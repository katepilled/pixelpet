<head>
	<style>
	.scaled {
		transform: scale(1.5);
	}

	.scaled-down {
		transform: scale(0.6667);
	}
</style>
</head>

<body>
	<h1 class='text-6xl font-cherry text-stroke text-grass mb-20 text-center'>
		pick a pet!
	</h1>
	<form action='/hatch' method='POST' class='flex-col items-center'>
		<div class='flex items-center justify-center mt-32 mb-20'>
			<input class='opacity-0 absolute' type='radio' id='egg1' name='egg' value='egg1' required />
			<label for='egg1'
				class='mr-20 cursor-pointer transition duration-300 ease-in-out transform hover:scale-150'>
				<img src='/images/egg.png' alt='egg 1' class='w-200 h-auto' />
			</label>
			<input class='opacity-0 absolute' type='radio' id='egg2' name='egg' value='egg2' required />
			<label for='egg2'
				class='mr-20 cursor-pointer transition duration-300 ease-in-out transform hover:scale-150'>
				<img src='/images/egg.png' alt='egg 2' />
			</label>
			<input class='opacity-0 absolute' type='radio' id='egg3' name='egg' value='egg3' required />
			<label for='egg3' class='cursor-pointer transition duration-300 ease-in-out transform hover:scale-150'>
				<img src='/images/egg.png' alt='egg 3' />
			</label>
		</div>
		<div class='flex justify-center'>
			<button type='submit' class='bg-grass text-white px-4 py-2 rounded hover:bg-grass-hover'>☆ hatch your pet!
				☆</button>

		</div>
	</form>
</body>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		const eggs = document.querySelectorAll('input[type=radio]');

		eggs.forEach(egg => {
			egg.addEventListener('click', function () {
				eggs.forEach(otherEgg => {
					otherEgg.nextElementSibling.querySelector('img').classList.remove('scaled');
				});

				egg.nextElementSibling.querySelector('img').classList.add('scaled');
			});
		});
	});
</script>